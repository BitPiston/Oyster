        </todo>
    </function>
    <function name="random_string">
        <synopsis>
            Generate a random alphanumeric string
        </synopsis>
        <note>
            The default length is 32 characters
        </note>
        <prototype>
            string random_string = random_string([int length])
        </prototype>
        <example>
            print random_string(100);
        </example>
